@model Museum_Management_System.Models.Faq
@{
    ViewData["Title"] = "Update FAQ";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Update FAQ</h2>

<form asp-action="UpdateFAQ" method="post">
    <input type="hidden" asp-for="IdFAQ" />

    <div class="mb-3">
        <label asp-for="Question" class="form-label">Question</label>
        <input asp-for="Question" class="form-control" />
        
    </div>
    <div class="mb-3">
        <label asp-for="Answer" class="form-label">Answer</label>
        <textarea asp-for="Answer" class="form-control"></textarea>
        
    </div>
    <button type="submit" class="btn btn-success">Update FAQ</button>
</form>
