@model List<Museum_Management_System.Models.Exhibit>

@{
    ViewData["Title"] = "Exhibit List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="mb-4">Exhibits</h2>

<form asp-action="SearchExhibit" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="name" class="form-control" placeholder="Search by exhibit name..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<a href="/Admin/AddExhibit" class="btn btn-success mb-3">Add New Exhibit</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Section</th>
            <th>Category</th>
            <th>Period</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exhibit in Model)
        {
            <tr>
                <td>@exhibit.NameExhibit</td>
                <td>@exhibit.Section?.NameSection</td>
                <td>@exhibit.CategoryExhibit</td>
                <td>@exhibit.HistoricalPeriod</td>
                <td>
                    @if (!string.IsNullOrEmpty(exhibit.ImageExhibit))
                    {
                        <img src="~/images/images_exhibits/@exhibit.ImageExhibit" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="UpdateExhibit" asp-route-id="@exhibit.IdExhibit" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="DeleteExhibit" asp-route-id="@exhibit.IdExhibit" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
