@model Museum_Management_System.Models.Exhibit
@{
    ViewData["Title"] = "Add Exhibit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Add Exhibit</h2>
<form asp-action="AddExhibit" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="NameExhibit" class="form-label">Name</label>
        <input asp-for="NameExhibit" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="HistoricalPeriod" class="form-label">Historical Period</label>
        <input asp-for="HistoricalPeriod" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryExhibit" class="form-label">Category</label>
        <input asp-for="CategoryExhibit" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="IdSection" class="form-label">Section ID</label>
        <input asp-for="IdSection" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ImageExhibitFile" class="form-label">Upload Image</label>
        <input asp-for="ImageExhibitFile" class="form-control" type="file" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
