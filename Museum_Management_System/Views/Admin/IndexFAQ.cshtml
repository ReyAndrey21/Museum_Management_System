@model IEnumerable<Museum_Management_System.Models.Faq>

@{
    ViewData["Title"] = "FAQ Management";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Admin/AddFAQ" class="btn btn-success mb-3">Add FAQ</a>

<table class="table table-bordered table-striped align-middle" style="max-width: 100%;">
    <thead class="table-light">
        <tr>
            <th style="width: 25%;">Question</th>
            <th style="width: 60%;">Answer</th>
            <th style="width: 15%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faq in Model)
        {
            <tr>
                <td>@faq.Question</td>
                <td style="word-break: break-word; white-space: pre-line;">@faq.Answer</td>
                <td>
                    <a href="@Url.Action("UpdateFAQ", new { id = faq.IdFAQ })" class="btn btn-warning btn-sm me-1">Edit</a>
                    <a href="@Url.Action("DeleteFAQ", new { id = faq.IdFAQ })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

