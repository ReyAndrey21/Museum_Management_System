@model Museum_Management_System.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Delete Employee</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?
</div>

<form asp-action="ConfirmDeleteEmployee">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/Admin/IndexEmployees" class="btn btn-secondary">Cancel</a>
</form>
