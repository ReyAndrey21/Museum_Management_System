@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/VisitorLayout.cshtml";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary fw-bold">Welcome to the Virtual Museum</h1>
    <p class="lead mt-3">Step into a world of history, culture, and wonder!</p>

    <img src="~/images/images_visitor_dashboard/muzeu-national.jpg"
