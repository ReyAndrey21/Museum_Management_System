@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/VisitorLayout.cshtml";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">About the Museum</h2>
        <p class="lead">Learn more about our history, mission, and collections.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <img src="~/images/images_visitor_dashboard/muzeu-national.jpg" alt="Museum Front"
                 class="img-fluid rounded shadow mb-4" />
        </div>
        <div class="col-md-6">
            <h4 class="text-secondary">Our Mission</h4>
            <p>
                Our museum is dedicated to preserving and celebrating the richness of history,
                culture, and science. We provide a space where people of all ages can explore, learn,
                and be inspired by our curated exhibits and educational programs.
            </p>

            <h4 class="text-secondary mt-4">What We Offer</h4>
            <ul>
                <li>Permanent and rotating exhibitions</li>
                <li>Guided tours in multiple languages</li>
                <li>Interactive learning areas for students</li>
                <li>Discounts for seniors and students</li>
                <li>Online ticket purchasing and reservations</li>
            </ul>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a href="/Visitor/Home" class="btn btn-outline-primary">Back to Home</a>
    </div>
</div>
