@model List<Museum_Management_System.Models.Employee>
@{
    ViewData["Title"] = "Employee List";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="mb-4">All Employees</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hire Date</th>
            <th>Salary</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
                <td>@e.HireDate.ToString("yyyy-MM-dd")</td>
                <td>@e.Salary.ToString("C")</td>
				<td>@e.Position</td>
            </tr>
        }
    </tbody>
</table>
