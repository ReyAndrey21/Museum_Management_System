@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Visitor Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="#">Museum</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Visitor/Home">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Visitor/About">About</a></li>
                <li class="nav-item"><a class="nav-link" href="/Visitor/ViewSections">Sections</a></li>
                <li class="nav-item"><a class="nav-link" href="/Visitor/BuyTicket">Tickets</a></li>
                <li class="nav-item"><a class="nav-link" href="/Visitor/ViewMuseumSchedule">Schedule</a></li>
				<li class="nav-item"><a class="nav-link" href="/Visitor/AvailableTours">Tours</a></li>
                <li class="nav-item"><a class="nav-link" href="/Visitor/ViewProfileVisitor">Profile</a></li>
            </ul>
            <a class="btn btn-outline-danger" href="/UsersAuth/Logout">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
